<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.ForgetPasswordFragment">

   <ImageView
       android:id="@+id/layout_background"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/forget_password_layout_backgorund"
       />
    <ImageView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/forget_password_message_txt"
        android:layout_below="@+id/layout_background"
        android:layout_centerHorizontal="true"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout"
        style="@style/EditTextHintStyle"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_below="@+id/message"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_et"
            style="@style/EditTextHintStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/email_icon"
            android:hint="Email"
            />


    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/send_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/send_btn"
        />
</RelativeLayout>